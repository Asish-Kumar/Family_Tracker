<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" >
        <shape
            android:shape="rectangle">

            <solid android:color="@color/colorPrimary"/>

            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />

            <solid android:color="@color/colorPrimary" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <!-- Keeping below values small allows android to adjust
            the button size as per text length-->
            <size
                android:height="10dp"
                android:width="20dp" />

        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape
            android:shape="rectangle">

            <solid android:color="@color/colorLight"/>

            <corners
                android:bottomLeftRadius="30dp"
                android:bottomRightRadius="30dp"
                android:radius="60dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="30dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <!-- Keeping below values small allows android to adjust
            the button size as per text length-->
            <size
                android:height="10dp"
                android:width="20dp" />

        </shape>
    </item>


</selector>



